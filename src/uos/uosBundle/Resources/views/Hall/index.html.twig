{% extends '::base.html.twig' %}

{% block container -%}
<div class="span6">
    <div class="containerHome" >
        <h1>Hall list</h1>
        <script src="assets/js/jquery.tablesorter.min.js"></script>
        <script >
            $(function() {
                $("table#sortTableExample").tablesorter({sortList: [[1, 0]]});
            });
            </script>
            <table class="table">
                <thead>
                    <tr>
                        <th>Hallname</th>
                        <th>Capacity</th>
                        <th>Gender</th>


                    </tr>
                </thead>
                <tbody>
        {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('hall_show', { 'id': entity.id }) }}">{{ entity.hallname }}</a></td>
                            <td>{{ entity.capacity }}</td>
                            <td>{{ entity.gender }}</td>

                            <td>
                                <ul>
                                    <li class="nav-header">
                                        <a href="{{ path('hall_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li class="nav-header">
                                        <a href="{{ path('hall_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                    <li class="nav-header">
                                        <a href="{{ path('uosuos_hall_room', { 'hallname': entity.hallname }) }}">show rooms</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
        {% endfor %}
                    </tbody>
                </table>

                <ul>
                    <li class="nav-header">
                        <a href="{{ path('hall_new') }}">
                            Create a new entry
                        </a>
                    </li>
                </ul>
