{% extends '::base.html.twig' %}
{% block container -%}
<div class="span6">
    <div class="containerHome" >
        <h1>Student list</h1>
        <script src="assets/js/jquery.tablesorter.min.js"></script>
        <script >
            $(function() {
                $("table#sortTableExample").tablesorter({sortList: [[1, 0]]});
            });
            </script>
            <table class="table">
                <thead>
                    <tr>
                        <th>Student Id </th>
                        <th>First Name </th>
                        <th>Last Name </th>
                        <th>Gender </th>
                        <th>Department </th>
                        <th>Year </th>


                    </tr>
                </thead>
                <tbody>
        {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('student_show', { 'id': entity.id }) }}">{{ entity.studentid }}</a></td>
                            <td>{{ entity.firstname }}</td>
                            <td>{{ entity.lastname }}</td>
                            <td>{{ entity.gender }}</td>
                            <td>{{ entity.deptName }}</td>
                            <td>{{ entity.year}}</td>

                            

                            <td>
                                <ul>
                                    <li class="nav-header">
                                        <a href="{{ path('student_show', { 'id': entity.id }) }}">show</a>
                                    </li>
                                    <li class="nav-header">
                                        <a href="{{ path('student_edit', { 'id': entity.id }) }}">edit</a>
                                    </li>
                                    <li class="nav-header">
                                        <a href="{{ path('uosuos_student_finance', { 'studentid': entity.studentid }) }}">Accounts</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
        {% endfor %}
                    </tbody>
                </table>
                <ul>
